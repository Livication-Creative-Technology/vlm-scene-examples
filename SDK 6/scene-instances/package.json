    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@dcl/eslint-config": "^1.0.1",
    "decentraland-ecs": "^6.11.14"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0",
    "yarn": "please use npm"
  },
  "dependencies": {
    "dcl-vlm": "^1.5.0"
  },
  "bundleDependencies": [
    "dcl-vlm"
  ]
}
